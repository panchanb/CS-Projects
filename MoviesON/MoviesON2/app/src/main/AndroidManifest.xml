<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example2.bhavinpanchani.movieson">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateNewAccount" />
        <activity
            android:name=".HomeScreen"
            android:theme="@style/AppTheme.hasActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".VideoViewActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".DescriptionActivity" />
        <activity android:name=".WatchLaterListActivity"></activity>
    </application>

</manifest>